<!-- when injecting, need to pass a "local" which will contain a hash to reference the specific resource class the Vote is applied to
ex:  erb :_vote_button, locals: { resource: post.id } %> -->

<% if session[:id] %>
  <form id="upvote" method="POST" action="/votes">
    <input type="submit" name="vote_result" value="Love it!">
    <input type="hidden" name="resource_class" value="<%= resource_class %>">
    <input type="hidden" name="resource_id" value="<%= resource_id %>">
    <input type="hidden" name="post_resource_id" value="<%= post_resource_id %>">
  </form>

  <form id="downvote" method="POST" action="/votes">
    <input type="submit" name="vote_result" value="Loathe it :(">
    <input type="hidden" name="resource_id" value="<%= resource_id %>">
    <input type="hidden" name="resource_class" value="<%= resource_class %>">
    <input type="hidden" name="post_resource_id" value="<%= post_resource_id %>">
  </form>
<% end %>
